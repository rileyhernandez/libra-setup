[Unit]
Description=Libra Process
After=network.target
Requires=network-online.target

[Service]
ExecStart=/usr/local/bin/big-brother
Type=simple
User=libra
Group=libra
Restart=always
RestartSec=3
# Harden service by making the root filesystem read-only
ProtectSystem=full

[Install]
WantedBy=multi-user.target